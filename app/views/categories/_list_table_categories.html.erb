

<div id="create-form" linkto="<%=categories_close_new_modal_path%>">

  
  <div class="btn-group pull-right">
    <%= link_to "Download Categories List", categories_get_pdf_path, :class => "btn btn-default" %>
    <button class="btn btn-primary" data-toggle="modal" data-target="#category-form">Add New Category</button>
  </div>

  <%= render partial: 'categories/form' , locals: {ncategory: ncategory, formid: "category-form" , newform: true} %>

</div>

<br><br>

<div>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= sortable 'name','Name', categories_path %></th>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody id="mytable">
      <% categories.each do |category| %>
        <%= render partial: 'categories/record' , locals: {category: category} %>
      <% end %>
    </tbody>
  </table>
  <br>
</div>