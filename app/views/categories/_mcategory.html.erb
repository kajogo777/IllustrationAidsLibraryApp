<% unless cat == nil %>

	<div class="thumbnail">
			<div class="caption">
					        <h3><%= cat.name %></h3>
					        <%= label_tag 'Description:' %>
					        <p><%= cat.description %></p>
					       
				        	<%= label_tag 'SubCategories:' %>
				        	<div class="table-responsive">
							  <table class="table table-hover table-condensed">
							    <thead>
							      <tr>
							        <th>Name</th>
							        <th>Description</th>
							      </tr>
							    </thead>

							    <tbody id="mytable">
							      <% cat.sub_categories.each do |scat| %>
							        <%= render partial: 'sub_categories/record' , locals: {sub_category: scat} %>
							      <% end %>
							    </tbody>
							  </table>
							  <br>
							</div>
				        	
				<% unless serv.empty? %>
					<div>
						<strong>Services:</strong>
						<br>
						<ul class="list-group">
							<% serv.each do |s| %>
							  <li class="list-group-item"><%= s.name %>  <%= s.sub_name %>  <span class="badge"><%= s.checkins %> Points</span></li>
						 	<% end %>
						</ul>
					</div>
				<% end %>
			</div>
	</div>
	
<% end %>