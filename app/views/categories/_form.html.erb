
<div class="modal fade" id="<%=formid%>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close create-form-close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">New Category!</h4>
        </div>


<%= form_for(ncategory, html: { multipart: true}, remote: true) do |f| %>

        <div class="modal-body">

          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
          <br>
          <div class="field">
            <%= f.label :description %><br>
            <%= f.text_area :description %>
          </div>
          <br>

          <div id="subs-form<%=formid%>">
          
            <strong>SubCategories:</strong><br>

              <!--<button id="<%=formid%>" type="button" class="add-sub btn btn-default">Add a SubCategory</button>-->
            <fieldset>

              <%= f.fields_for :sub_categories do |subcat_form| %>
                <%= render partial: 'categories/sub_category_fields' , locals: { f: subcat_form } %>
              <% end %>

              <%= link_to_add_association "Add SubCategory", f, :sub_categories,class: "btn btn-default", :render_options => {:wrapper => 'bootstrap' } %>

            </fieldset>
          </div>
           

        </div>

        <div id="notice-location-form<%= ('-edit' + ncategory.id.to_s) unless newform  %>">
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default create-form-close" data-dismiss="modal" >Close</button>
          <%= f.submit(class: "btn btn-primary") %>
        </div>

<% end %>

</div>
    </div>
  </div>