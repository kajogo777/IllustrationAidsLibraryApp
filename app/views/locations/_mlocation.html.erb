<% unless loc.blank? %>

	<div class="thumbnail">
			<div class="caption">

				Location:
				<br>
				<%= loc.loc1 %>
				|<%= ("	 " + loc.loc2) unless loc.loc2 == nil%>
				|<%= ("		" + loc.loc3) unless loc.loc3 == nil%>

			</div>


			<% unless @items.blank? %>
			<div class="caption">
				<br>
				<br>
				<strong>Items</strong>
				<div class="table-responsive">
				    <table class="table table-hover table-condensed">
					    <thead>
					      <tr>
					      	<th>ID</th>
					      	<th>Category</th>
					      	<th>Sub Category</th>
					      	<th>Status</th>
					      </tr>
					    </thead>
					    <tbody>
							<% @items.each do |item| %>
								<tr>
							      	<td><%= item.id %></td>
							      	<td><%= item.category.name %></td>
							      	<% unless item.sub_category == nil %>
							      		<td><%= item.sub_category.name %></td>
							      	<% else %>
							      		<td></td>
							      	<% end %>
							      	<% unless item.check_outs.count == 0 %>
							      		<td>In Stock</td>
							      	<% else %>
							      		<td>Checked Out</td>
							      	<% end %>
						        </tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
			<% end %>

<% end %>