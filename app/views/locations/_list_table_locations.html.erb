

<div id="create-form" linkto="<%=locations_close_new_modal_path%>">

  
  <div class="btn-group pull-right">
    <%= link_to "Download Locations List", locations_get_pdf_path, :class => "btn btn-default" %>
    <button class="btn btn-primary" data-toggle="modal" data-target="#location-form">Add New Location</button>
  </div>

  <%= render partial: 'locations/form' , locals: {nlocation: nlocation, formid: "location-form" , newform: true} %>

</div>

<br><br>

<div>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Location A</th>
        <th>Location B</th>
        <th>Location C</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody id="mytable">
      <% locations.each do |location| %>
        <%= render partial: 'locations/record' , locals: {location: location} %>
      <% end %>
    </tbody>
  </table>
  <br>
</div>