
<div class="modal fade" id="<%=formid%>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close create-form-close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">New Location!</h4>
        </div>


<%= form_for(nlocation, html: { multipart: true}, remote: true) do |f| %>

        <div class="modal-body">

          <div class="field">
            <%= f.label :loc1 %><br>
            <%= f.text_field :loc1 %>
          </div>
          <br>
          <div class="field">
            <%= f.label :loc2 %><br>
            <%= f.text_field :loc2 %>
          </div>
          <br>
          <div class="field">
            <%= f.label :loc3 %><br>
            <%= f.text_field :loc3 %>
          </div>
          <br>
          <div class="field">
            <%= f.label :description %><br>
            <%= f.text_area :description %>
          </div>
          <br>          

        </div>

        <div id="notice-location-form<%= ('-edit' + nlocation.id.to_s) unless newform  %>">
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default create-form-close" data-dismiss="modal" >Close</button>
          <%= f.submit(class: "btn btn-primary") %>
        </div>

<% end %>

</div>
    </div>
  </div>