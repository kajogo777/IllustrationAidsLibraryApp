<% unless itm == nil %>

	<div class="thumbnail">
			<%= image_tag itm.photo_url.to_s if itm.photo?%>
			<div class="caption">
					        <h3>Name: <%= itm.name %></h3>
					        <%= label_tag 'Location:' %>
					        <p><%= itm.location.get_full_name %></p>
					        <% unless itm.description == "" %>
						        <%= label_tag 'Description:' %>
						        <p><%= itm.description %></p>
						    <% else %>
						    	-<%= label_tag 'No Description available' %>-
						    <% end %>

					        <p><% cat = itm.category %></p>
					        <%= label_tag 'Category:' %>
					        <p><%= cat.name %></p>
					        <p>
					        	<%= label_tag 'Subcategory:' %>
					        	<p>
						        	<% unless itm.sub_category == nil %>
						        	<%= itm.sub_category.name %>
						        	<% end %>
					        	</p>
					        </p>
					        <p>
				        	<%= label_tag 'Tags:' %>
				        	<% itm.tags.each do |s| %>
								<span class="label label-info"><%= s.name %></span>
							<% end %>
				        	</p>
				<% unless serv.empty? %>
					<div>
						<strong>Services:</strong>
						<br>
						<ul class="list-group">
							<% serv.each do |s| %>
							  <li class="list-group-item"><%= s.name %>  <%= s.sub_name %>  <span class="badge"><%= s.checkins %> Points</span></li>
						 	<% end %>
						</ul>
					</div>
				<% end %>
			</div>
	</div>
	
<% end %>