<% unless people.blank? %>

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>National ID</th>
        <th>Full Name</th>
        <th>Birth Date</th>
        <th>Address</th>
        <th>Contacts</th>
      </tr>
    </thead>

    <tbody id="mytable">
      <% people.each do |person| %>
        <tr id="record<%=person.id%>">
          <td><%= person.nationalid %></td>
          <td><%=person.get_full_name%></td>
          <td><%= person.birth_date %></td>
          <td><span class="label label-info glyphicon glyphicon-asterisk" data-toggle="popovert" data-content="<%=person.get_full_address%>"> </span></td>
          <td><span class="label label-info glyphicon glyphicon-asterisk" data-toggle="popovert" data-content="<%=simple_format(person.get_all_contacts)%>"> </span></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% end %>