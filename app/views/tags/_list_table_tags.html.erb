

<div id="create-form" linkto="<%=tags_close_new_modal_path%>">

  
  <div class="btn-group pull-right">

    <%= link_to "Download Tags List", tags_get_pdf_path, :class => "btn btn-default" %>
    <button class="btn btn-primary" data-toggle="modal" data-target="#tag-form">Add New Tag</button>
    
  </div>

  <%= render partial: 'tags/form' , locals: {ntag: ntag, formid: "tag-form", newform: true} %>

</div>

<br><br>

<div class="table-responsive btn-block">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody id="mytable">
      <% tags.each do |tag| %>
        <%= render partial: 'tags/record' , locals: {tag: tag} %>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= will_paginate tags, renderer: BootstrapPagination::Rails %>
  <br>
</div>